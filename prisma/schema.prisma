// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PersonalInformation {
  id String @id @default(uuid())

  type            String
  name            String
  cpf             String
  password        String
  sex             String
  motherName      String
  email           String
  birthDate       String
  address         Address[]
  Coordinator     Coordinator[]
  TeachingManager TeachingManager[]
  Teacher         Teacher[]
  Student         Student[]
}

model Address {
  idUser     String  @id
  country    String
  city       String
  rua        String
  number     String
  complement String?

  id PersonalInformation @relation(fields: [idUser], references: [id])
}

model Coordinator {
  personalInformationId String @id

  personalInformation PersonalInformation @relation(fields: [personalInformationId], references: [id])
}

model TeachingManager {
  personalInformationId String @id

  personalInformation PersonalInformation @relation(fields: [personalInformationId], references: [id])
}

model Teacher {
  personalInformationId String    @id
  subjectsOwner         Subject[]

  personalInformation PersonalInformation @relation(fields: [personalInformationId], references: [id])
}

model Student {
  personalInformationId String    @id
  subjects              Subject[]

  personalInformation PersonalInformation @relation(fields: [personalInformationId], references: [id])
}

model Subject {
  id        String    @id @default(uuid())
  teacherId String
  students  Student[]

  owner Teacher @relation(fields: [teacherId], references: [personalInformationId])
}
